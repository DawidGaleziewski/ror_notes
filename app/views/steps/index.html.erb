<h1 align = 'center'> All steps </h1>

<% @steps.each do |step| %>
  <div class = 'row'> 
    <div class = 'col-xs-8 col-xs-offset-2'>
      <div class = 'well well-lg'>
        
        <div class = 'step-row'>
          <%= link_to "STEP #{step.position}  #{step.title}", step_path(step), class: 'step-position' %> 
          <%= truncate( step.description, length: 70,  class: 'step-description') %>
          
            <div class = 'step-btn'>
              <%= link_to 'Show', step_path(step), class: 'btn btn-xs btn-primary' %>
              <%= link_to 'Edit', edit_step_path(step), class: 'btn btn-xs btn-success' %>
              <%= link_to 'Delete', step_path(step), method: :delete, class: 'btn btn-xs btn-danger' %>
            </div>
          
        </div>
      
      </div>
    </div>
  </div>

<% end %>